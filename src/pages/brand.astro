---
import Layout from '../layouts/Layout.astro';
import LinkButton from '../components/LinkButton.astro';
---

<Layout title="Meat Up | Brand Guidelines">
	<main>
		<div class="container">
			<header>
				<h1>Brand Guidelines</h1>
				<p>
					This page is a living document of the core visual identity of Meat Up.
				</p>
			</header>

			<!-- Color Palette -->
			<section>
				<h2>Color Palette</h2>
				<div class="swatch-grid">
					<div class="swatch">
						<div class="swatch-color" style="background-color: var(--electric-red);"></div>
						<div class="swatch-label">
							<h3>Electric Red</h3>
							<p>#E04F5F</p>
						</div>
					</div>
					<div class="swatch">
						<div class="swatch-color" style="background-color: var(--mustard-yellow);"></div>
						<div class="swatch-label">
							<h3>Mustard Yellow</h3>
							<p>#FFDB58</p>
						</div>
					</div>
					<div class="swatch">
						<div class="swatch-color" style="background-color: var(--carbon-black);"></div>
						<div class="swatch-label">
							<h3>Carbon Black</h3>
							<p>#000000</p>
						</div>
					</div>
					<div class="swatch">
						<div class="swatch-color" style="background-color: var(--stark-white); border: 1px solid var(--carbon-black);"></div>
						<div class="swatch-label">
							<h3>Stark White</h3>
							<p>#FFFFFF</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Typography -->
			<section>
				<h2>Typography</h2>
				<div class="type-showcase">
					<p class="hero-text">Hero Text</p>
					<h1>Section Title (H1)</h1>
					<h2>Card Title (H2)</h2>
					<p>
						This is a paragraph of body copy. It uses the Inter font for maximum
						legibility, providing a clean and modern feel that contrasts with the
						bold, aggressive display font.
					</p>
					<p class="ui-label">UI Label</p>
				</div>
			</section>

			<!-- UI Components -->
			<section>
				<h2>UI Components</h2>
				<h3>Buttons</h3>
				<div class="component-display">
					<LinkButton href="#">Link Button</LinkButton>
				</div>
			</section>
		</div>
	</main>
</Layout>

<style>
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 4rem 2rem;
	}

	header {
		text-align: center;
		margin-bottom: 4rem;
		border-bottom: 2px solid var(--carbon-black);
		padding-bottom: 2rem;
	}

	section {
		margin-bottom: 4rem;
	}

	section h2 {
		margin-bottom: 2rem;
		border-bottom: 1px solid #eee;
		padding-bottom: 1rem;
	}

	.swatch-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
	}

	.swatch-color {
		width: 100%;
		height: 120px;
		border: 2px solid var(--carbon-black);
	}

	.swatch-label {
		padding: 1rem 0;
	}

	.swatch-label h3 {
		font-size: 1.25rem;
		margin-bottom: 0.25rem;
	}

	.swatch-label p {
		font-family: monospace;
		font-size: 1rem;
	}

	.type-showcase > * {
		margin-bottom: 1.5rem;
	}

	.hero-text {
		font-family: var(--font-display);
		font-size: var(--text-hero);
		font-weight: 700;
		text-transform: uppercase;
		line-height: 0.9;
		letter-spacing: -0.05em;
	}

	.ui-label {
		font-family: var(--font-body);
		font-weight: 700;
		text-transform: uppercase;
		font-size: var(--text-ui);
		letter-spacing: 0.05em;
	}

	.component-display {
		background-color: #f5f5f5;
		padding: 2rem;
		border: 1px solid #eee;
		display: flex;
		gap: 1rem;
		align-items: center;
	}
</style>
