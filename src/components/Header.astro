---
import { Image } from 'astro:assets';
import hotDogImage from '../assets/hot-dog.jpg';
import Navigation from './Navigation.astro';
---
<header class="site-header">
  <Navigation />

  <div class="hero-split">
    <div class="hero-left">
      <h1>Good Meat.<br>Better Company.</h1>
    </div>
    <div class="hero-right">
      <Image
        src={hotDogImage}
        alt="Delicious hot dog"
        widths={[640, 750, 828, 1080, 1200, 1920, 2048, 2560, 3840]}
        sizes="(max-width: 768px) 100vw, 100vw"
        quality={75}
        loading="eager"
      />
    </div>
  </div>
</header>

<style>
  .site-header {
    position: relative;
    background-color: var(--carbon-black);
  }

  .hero-split {
    display: grid;
    grid-template-columns: 1fr 1fr;
    height: 90vh;
    max-height: 800px;
  }

  .hero-left {
    background-color: var(--electric-red);
    color: var(--carbon-black);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-2xl);
  }

  .hero-left h1 {
    font-family: var(--font-display);
    font-size: var(--text-hero);
    line-height: 1;
    margin: 0;
    color: var(--carbon-black);
    text-transform: uppercase;
  }

  .hero-right {
    position: relative;
    overflow: hidden;
  }

  .hero-right img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  @media (max-width: 768px) {
    .hero-split {
      grid-template-columns: 1fr;
      height: auto;
      max-height: none;
    }
    .hero-left {
        min-height: 50vh;
    }
    .hero-right {
        height: 50vh;
    }
  }
</style>
