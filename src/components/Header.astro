---
import { Image } from 'astro:assets';
import hotDogImage from '../assets/hot-dog.jpg';
---
<header class="site-header">
  <div class="top-bar">
    <div class="left-nav">
        <div class="logo">
            <a href="/">MEATS</a>
        </div>
        <nav>
            <a href="/about">About</a>
            <a href="/events">Events</a>
            <a href="/contact">Contact</a>
        </nav>
    </div>
    <div class="right-nav">
        <a href="/rsvp" class="cta-button">RSVP</a>
    </div>
  </div>

  <div class="hero-split">
    <div class="hero-left">
      <h1>We have<br>the meats.</h1>
    </div>
    <div class="hero-right">
      <Image
        src={hotDogImage}
        alt="Delicious hot dog"
        widths={[640, 750, 828, 1080, 1200, 1920, 2048, 3840]}
        sizes="50vw"
        loading="eager"
      />
    </div>
  </div>
</header>

<style>
  .site-header {
    position: relative;
    background-color: var(--carbon-black);
  }

  .top-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 10;
    box-sizing: border-box;
  }

  .left-nav {
      display: flex;
      align-items: center;
      gap: 2rem;
  }

  .logo a {
    font-family: var(--font-display);
    font-size: 1.5rem;
    text-decoration: none;
    color: var(--stark-white);
    text-transform: uppercase;
  }

  .top-bar nav {
    display: flex;
    gap: 1.5rem;
  }

  .top-bar nav a {
    color: var(--stark-white);
    text-decoration: none;
    font-family: var(--font-body);
    text-transform: uppercase;
    font-size: 0.8rem;
    letter-spacing: 0.1em;
    opacity: 0.7;
    transition: opacity 0.2s;
  }

  .top-bar nav a:hover {
      opacity: 1;
  }

  .cta-button {
      background-color: var(--electric-red);
      color: var(--carbon-black);
      padding: 0.5rem 1.5rem;
      text-decoration: none;
      font-family: var(--font-display);
      text-transform: uppercase;
      font-size: 0.9rem;
  }

  .hero-split {
    display: grid;
    grid-template-columns: 1fr 1fr;
    height: 90vh;
    max-height: 800px;
  }

  .hero-left {
    background-color: var(--electric-red);
    color: var(--carbon-black);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem;
  }

  .hero-left h1 {
    font-family: var(--font-display);
    font-size: clamp(3rem, 10vw, 8rem);
    line-height: 1;
    margin: 0;
    color: var(--carbon-black);
    text-transform: uppercase;
  }

  .hero-right {
    position: relative;
    overflow: hidden;
  }

  .hero-right img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  @media (max-width: 768px) {
    .hero-split {
      grid-template-columns: 1fr;
    }
    .hero-right {
      display: none; /* On small screens, maybe just show the red part */
    }
    .hero-left {
        min-height: 60vh;
    }
    .top-bar nav {
        display: none; /* Hide nav on mobile for simplicity for now */
    }
    .left-nav {
      gap: 0;
    }
  }
</style>
