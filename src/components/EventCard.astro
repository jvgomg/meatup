---
interface Props {
  eventNumber: number;
  date: Date;
  venue: string;
  address: string;
  googleMapsLink?: string;
  attendees: string[];
  type: string;
}

const { eventNumber, date, venue, address, googleMapsLink, attendees, type } = Astro.props;
---

<li class="event">
  <div class="event-number">
    {eventNumber.toString().padStart(3, '0')}
  </div>
  <div class="details">
    <h2>{venue}</h2>
    <p class="type">{type}</p>
    <time datetime={date.toISOString()}>
      {date.toLocaleDateString('en-GB', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </time>
    {googleMapsLink && <a href={googleMapsLink} target="_blank" rel="noopener">View on Google Maps</a>}
  </div>
</li>

<style>
  .event {
    border: 2px solid #fff;
    padding: 2rem;
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .event-number {
    font-family: 'Anton', sans-serif;
    font-size: 4rem;
    color: #ffc700;
  }

  .details h2 {
    font-size: 2.5rem;
    margin: 0;
  }

  .details .type {
    font-size: 1.5rem;
    margin: 0.5rem 0;
    color: #aaa;
  }

  .details time {
    color: #aaa;
    display: block;
    margin: 0.5rem 0;
  }

  .details a {
    text-decoration: underline;
  }
</style>
